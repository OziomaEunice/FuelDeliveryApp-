<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardPayment"
    android:background="@drawable/carbackground">

    <TextView
        android:id="@+id/payment"
        android:layout_width="259dp"
        android:layout_height="57dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="76dp"
        android:background="@color/purple_200"
        android:fontFamily="@font/aclonica"
        android:text="Payment"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paymentConfirmation"
        android:layout_width="225dp"
        android:layout_height="62dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/lalezar"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cardNumber"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/cabin"
        android:text="Card Number"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment" />

    <EditText
        android:id="@+id/cardNumberText"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumber" />

    <TextView
        android:id="@+id/expiringDate"
        android:layout_width="158dp"
        android:layout_height="30dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cabin"
        android:text="Expiration Date"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberText" />

    <TextView
        android:id="@+id/cvv"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/cabin"
        android:text="CVV"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberText" />

    <EditText
        android:id="@+id/cvvText"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvv" />

    <EditText
        android:id="@+id/dateText"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expiringDate" />

    <TextView
        android:id="@+id/dateExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="3dp"
        android:text="MM/YY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="46dp"
        android:layout_height="34dp"
        android:layout_marginTop="176dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardimage"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="69dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumber"
        app:srcCompat="@drawable/visa_image" />

    <TextView
        android:id="@+id/postal"
        android:layout_width="192dp"
        android:layout_height="34dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="@font/cabin"
        android:text="Postal   Code"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateExample" />

    <EditText
        android:id="@+id/postalText"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="212dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postal" />

    <TextView
        android:id="@+id/countryCode"
        android:layout_width="128dp"
        android:layout_height="31dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/cabin"
        android:text="Country Code"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalText" />

    <TextView
        android:id="@+id/MobileNo"
        android:layout_width="169dp"
        android:layout_height="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/cabin"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalText" />

    <EditText
        android:id="@+id/countryCodeText"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="phone"
        android:text="+44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryCode" />

    <EditText
        android:id="@+id/MobileNoText"
        android:layout_width="194dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MobileNo" />
</androidx.constraintlayout.widget.ConstraintLayout>