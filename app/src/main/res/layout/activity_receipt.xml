<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receipt"
    android:background="@drawable/carbackground">

    <TextView
        android:id="@+id/OrderConfirmation"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="105dp"
        android:fontFamily="@font/aclonica"
        android:text="Order Confirmed"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/greenTick"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_tick" />

    <TextView
        android:id="@+id/OrderNumText"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="62dp"
        android:text="Your order number is:"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderConfirmation" />

    <EditText
        android:id="@+id/OrderNumber"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:inputType="number"
        android:text="2084527"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderConfirmation" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="191dp"
        android:layout_height="31dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="176dp"
        android:text="Day and Time:"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderNumText" />

    <TextView
        android:id="@+id/DateandTime"
        android:layout_width="297dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="69dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/ServiceDelivery"
        android:layout_width="180dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="232dp"
        android:text="Service delivery will arrive in:"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DateandTime" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="107dp"
        android:layout_height="90dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="36dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DateandTime" />
</androidx.constraintlayout.widget.ConstraintLayout>